<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        android:padding="8dp">

        <ImageView
            android:id="@+id/link_thumbnail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/gis_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/link_shared_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Rajat Kumar Gupta"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/link_thumbnail"
            app:layout_constraintStart_toEndOf="@+id/link_thumbnail"
            app:layout_constraintTop_toTopOf="@+id/link_thumbnail" />

        <TextView
            android:id="@+id/link_display_url"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/default_url"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/link_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/link_thumbnail" />

        <TextView
            android:id="@+id/link_display_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/link_display_url"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:text="@string/default_description"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/link_display_url"
            app:layout_constraintTop_toBottomOf="@+id/link_display_url" />

        <Button
            android:id="@+id/link_open_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#00000000"
            android:text="@string/open_in_browser_btn"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/link_display_description" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
